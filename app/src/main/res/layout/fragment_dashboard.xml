<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainShelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoriesImageView"
                android:layout_width="180dp"
                android:layout_height="33dp"
                android:background="@drawable/round_outline"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:scaleX="0.98"
                android:scaleY="0.9"
                android:src="@drawable/book_cover_template_thumb"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="349dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:background="@drawable/round_outline"
                        android:backgroundTint="@color/white"
                        android:clipToOutline="true"
                        android:scaleY="0.85"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="382dp" />


                    <ImageButton
                        android:id="@+id/authorsImageView"
                        android:layout_width="144dp"
                        android:layout_height="145dp"
                        android:background="@drawable/round_outline"
                        android:clipToOutline="true"
                        android:outlineSpotShadowColor="#9677d8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/book_cover_template_thumb"
                        tools:layout_editor_absoluteX="37dp"
                        tools:layout_editor_absoluteY="411dp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/button13"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_outline"
                    android:backgroundTint="@color/white"
                    android:clipToOutline="true"
                    android:scaleX="0.8"
                    tools:layout_editor_absoluteX="181dp"
                    tools:layout_editor_absoluteY="411dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/documentsImageView"
            android:layout_width="155dp"
            android:layout_height="207dp"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/book_cover_template_thumb"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="349dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="170dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/book1"
        app:layout_constraintBottom_toTopOf="@+id/mainShelf"
        app:layout_constraintEnd_toEndOf="@+id/mainShelf"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/book4"
        app:layout_constraintBottom_toTopOf="@+id/mainShelf"
        app:layout_constraintStart_toEndOf="@+id/imageView16" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/book5"
        app:layout_constraintBottom_toTopOf="@+id/mainShelf"
        app:layout_constraintStart_toStartOf="@+id/mainShelf" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/book2"
        app:layout_constraintBottom_toTopOf="@+id/mainShelf"
        app:layout_constraintStart_toEndOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/book3"
        app:layout_constraintBottom_toTopOf="@+id/mainShelf"
        app:layout_constraintStart_toEndOf="@+id/imageView13" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="170dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/book1"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/mainShelf" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/book2"
        app:layout_constraintStart_toEndOf="@+id/imageView22"
        app:layout_constraintTop_toBottomOf="@+id/mainShelf" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/book3"
        app:layout_constraintStart_toEndOf="@+id/imageView18"
        app:layout_constraintTop_toBottomOf="@+id/mainShelf" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="40dp"
        android:layout_height="130dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/book4"
        app:layout_constraintStart_toEndOf="@+id/imageView20"
        app:layout_constraintTop_toBottomOf="@+id/mainShelf" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/book5"
        app:layout_constraintStart_toStartOf="@+id/mainShelf"
        app:layout_constraintTop_toBottomOf="@+id/mainShelf" />
</androidx.constraintlayout.widget.ConstraintLayout>